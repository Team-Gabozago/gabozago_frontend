{
    "compilerOptions": {
      "target": "ES5",
      "lib": ["DOM", "esnext"],
      "jsx": "react-jsx",
      "module": "commonjs",
      "allowJs": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"]
      },
      "outDir": "./dist",
      "sourceMap": true,
      "esModuleInterop": true, // ES6 모듈 사양을 준수하여 CommonJS 모듈을 가져올수 있다.
      "strict": true,
      "skipLibCheck": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist"]
  }